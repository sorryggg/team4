<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/up_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ticket"
            android:layout_weight="1"
            android:onClick="selectFlag"
            android:text="@string/ticket"/>

        <Button
            android:id="@+id/up_season_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/season_ticket"
            android:layout_weight="1"
            android:onClick="selectFlag"
            android:text="@string/seasonTicket"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_scene">
    </FrameLayout>

</LinearLayout>